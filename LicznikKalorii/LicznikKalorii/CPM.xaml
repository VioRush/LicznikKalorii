        <Image Name="prom" Source="title.png" HorizontalAlignment="Center" Height="54" Margin="10,10,0,0" VerticalAlignment="Top" Width="395" RenderTransformOrigin="0.505,0.686"/>
        <TextBlock Name="textBlockCPM" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="128" Width="344" Margin="282,244,267.6,148.8" TextAlignment="Center" Background="#FFF3F3F3"/>
        <Label Content="Twoje dobowe zapotrzebowanie kaloryczne (CPM):" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.504,-1.062" Margin="282,192,267.6,298.8" Width="344" Height="30"/>
