<Window x:Class="LicznikKalorii.BMR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LicznikKalorii"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="BMR" Height="550" Width="900">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Image Name="prom" Source="title.png" HorizontalAlignment="Center" Height="54" Margin="254,10,230.6,0" VerticalAlignment="Top" Width="409" RenderTransformOrigin="0.505,0.686"/>
        <TextBlock Name="textBlockBMR" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="128" Width="409" Margin="254,244,230.6,148.8" TextAlignment="Center" Background="#FFF3F3F3"/>
        <Label Content="Twoje minimalne dzienne zapotrzebowanie kaloryczne (BMR):" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.504,-1.062" Margin="254,186,230.6,304.8" Width="409" Height="30"/>
        <Button Content="Powrót" HorizontalAlignment="Left" Margin="24,24,0,0" VerticalAlignment="Top" Width="101" Height="23" Click="Powrot_Click"/>
    </Grid>
</Window>
